{
  "name": "nodejs",
  "version": "1.0.0",
  "description": "nodejs application",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "cross-env NODE_ENV=production tsc --build tsconfig.json",
    "dev": "cross-env NODE_ENV=development nodemon src/app.ts",
    "dev2": "nodemon src/app.ts",
    "start": "cross-env NODE_ENV=production node --trace-deprecation ./build/app.js",
    "lint": "npx eslint --ext .ts src/"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html, pug, hbs, ejs",
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register"
  },
  "author": "Hadi Bakhshi",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/find": "^0.2.1",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-plugin-node": "^11.1.0",
    "find": "^0.3.0",
    "fs-extra": "^11.1.0",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-handlebars": "^6.0.6",
    "helmet": "^6.0.1",
    "pug": "^3.0.2"
  }
}